<%= render "shared/page_title", title: "showing all users" %>

<div align="center">
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="user-title"><%= link_to user.firstname.capitalize, user_path(user) if user.firstname %></li>
          <li><small><%= pluralize(user.projects.count, "projects") if user.projects %></small></li>
          <% if logged_in? %>
            <li><%= link_to "Delete this user", user_path(user), method: :delete,
              data: { confirm: "Are you sure you want to delete this user and all associated projects?"} %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
</div>