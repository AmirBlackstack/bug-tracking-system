<%= render "shared/page_title", title: "All tasks" %>

<div align="center">
  <% @bugs.each do |bug| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="bug-title"><%= link_to bug.title.capitalize, project_bug_path(@project, bug) %></li>
          <% if logged_in? && current_user == bug.project.user %>
            <li><%= link_to "Edit this bug", edit_project_bug_path(@project, bug) %></li>
            <li>Status: <span class="badge">  <%= bug.status.capitalize %> &nbsp;</span> </li>
            <li>Active Devs: </li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
</div>