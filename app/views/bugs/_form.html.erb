<%= render "shared/errors", obj: @bug %>
<div class="row">
  <div class="col-md-12">
    <%= form_with(model: [@project, @bug], local: true, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :title %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Enter Title", autofocus: true%>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :description  %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :description, class: "form-control", placeholder: "Enter description" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :deadline %>
        </div>
        <div class="col-md-8">

          <%= f.date_select :deadline, :order => [:day, :month, :year], class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :sc %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :sc, class: "form-control", placeholder: "Select Screenshoot" %>
        </div>
      </div>

    <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :user_type, "Type" %>
      </div>
      <div class="col-md-8">
        <%= f.select :task_type, options_for_select(Bug.task_types.keys.map { |w| [w.humanize, w]}), class: "form-control" %>
      </div>
    </div>


        <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :status, "Stutus" %>
      </div>
      <div class="col-md-8">
        <%= f.select :status, options_for_select(Bug.statuses.keys.map { |w| [w.humanize, w]}), class: "form-control" %>
      </div>
    </div>
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit(@bug.new_record? ? "Add Bug" : "Update bug", class: "btn btn-primary btn-lg btn-xlarge") %>
        </div>
      </div>
    <% end %>
    <div class="col-md-4 col-md-offset-4 colotmatch">
      [ <%= link_to "Cancel request and return", project_bugs_path %> ]
    </div>
  </div>
</div>