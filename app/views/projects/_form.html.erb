
<div class="row">
  <div class="col-md-12">
    <%= form_for(@project, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :name, "Choose Project Name" %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter your project name", autofocus: true%>
        </div>
      </div>


      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit(@project.new_record? ? "Create Project" : "Update Project",
            class: "btn btn-primary btn-lg btn-xlarge") %>
        </div>
      </div>
    <% end %>
    <div class="col-md-4 col-md-offset-4 colotmatch">
      [ <%= link_to "Cancel request and return to project listing", projects_path %> ]
    </div>
  </div>
</div>